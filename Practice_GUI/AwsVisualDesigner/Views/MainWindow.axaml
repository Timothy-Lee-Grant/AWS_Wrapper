<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AwsVisualDesigner.Views.MainWindow"
        Title="AWS Visual Designer" Width="800" Height="600">
    
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#333" Spacing="10">
            <Button Content="Add EC2" Click="AddEc2_Click" Margin="10"/>
            <Button Content="Add S3" Click="AddS3_Click" Margin="10"/>
        </StackPanel>

        <Canvas Name="MainCanvas" Background="#1e1e1e" />
    </DockPanel>
</Window>