<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AwsVisualDesigner.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AwsVisualDesigner.Views.HomePage"
        x:DataType="vm:HomePageViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AwsVisualDesigner">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:HomePageViewModel/>
    </Design.DataContext>

    <StackPanel>
        <TextBlock Text="{Binding Message}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding PrivateMessage}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox   ItemsSource="{Binding Resource}"
                    SelectedItem="{Binding SelectedResource}"
                    PlaceholderText="Choose an option"
                    Width="200" />
        <TextBlock  Text="{Binding SelectedResource, StringFormat='You selected: {0}'}"
                    IsVisible="{Binding SelectedResource, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Classes="secondary"/>
    </StackPanel>

</Window>